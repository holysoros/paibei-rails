<div data-role="page" id="page-success">
  <div id="fea" class="features_m">
    <div class="head text-center" style="color:#11a109; font-size:20px; text-shadow:none;">
      <br/>
      <img src="<%= asset_path 'success.png' %>"  style="vertical-align:middle;padding-right:10px;" width="58px" height="58px" />
      防伪验证通过
    </div>
    <br/>
    <div class="head text-center">
      <img align="absmiddle" src="<%= @qrcode_record.batch.product.image.url(:medium) %>" width="288px" height="219px" />
    </div>
    <br/>
    <div class="ui-grid-a">
      <div class="ui-block-a">
        <div class="ui-bar ui-bar-c" style="text-align:right;">
          <img src="<%= asset_path 'logo_m.png' %>" width="126px" height="126px" />
        </div>
      </div>
      <div class="ui-block-b" style="vertical-align:middle;">
        <div class="ui-bar ui-bar-c" style="color:#ffffff; text-align:left; font-size:12px; text-shadow:none;">名称：<%= @qrcode_record.batch.product.name %></div>
        <div class="ui-bar ui-bar-c" style="color:#ffffff; text-align:left; font-size:12px; text-shadow:none;">产地：<%= @qrcode_record.batch.product.place %></div>
        <div class="ui-bar ui-bar-c" style="color:#ffffff; text-align:left; font-size:12px; text-shadow:none;">售价：<%= @qrcode_record.batch.product.price %>元</div>
        <div class="ui-bar ui-bar-c" style="color:#ffffff; text-align:left; font-size:12px; text-shadow:none;">批次号：<%= @qrcode_record.batch.bid %></div>
      </div>
    </div>
    <br/>
  </div>
  <div Style="padding:10px 20px 10px; text-align:center; background:#444447; color:#ffffff; text-shadow:none;">
    <p id="contact_us">
      <img align="absmiddle" src="<%= asset_path 'phone-1.png' %>" style="vertical-align:middle;padding-right:10px;" width="19px" height="19px" />
      联系我们
    </p>
  </div>
</div>

<script>
$(function () {
  $('#contact_us').click(function () {
    $(location).attr('href', "<%= url_for :controller => 'mobile', :action => 'contact_us' %>");
  });
});
</script>
