<h1>所有批次</h1>
 
<section class="content">
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">批次</h3>    
      </div><!-- /.box-header -->

      <%= link_to new_admin_batch_path, :class => 'btn btn-app' do %>
        <i class="fa fa-file-o"></i> 创建
      <% end %>

      <div class="box-body table-responsive">
        <table id="news_table" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>商品名称</th>
              <th>经销地域</th>
              <th>数量</th>
              <th>生成时间</th>
              <th>下载地址</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @batches.each do |batch| %>
              <tr>
                <td><%= link_to batch.product.name, admin_batch_path(batch) %></td>
                <td><%= Paibei::PRIVINCES[batch.dist_place].last %></td>
                <td><%= batch.count %></td>
                <td><%= batch.created_at.strftime('%F %T') %></td>
                <td><a href='<%= "http://112.124.117.97:8080/#{batch.bid}.zip" %>'">下载</a></td>
                <td><%= link_to '删除', admin_batch_path(batch),
                  method: :delete, data: { confirm: '删除批次可能造成数据不一致，确定删除吗？' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</div>

</section><!-- /.content -->
